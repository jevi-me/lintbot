{
  "name": "Lintbot",
  "version": "1.0.0",
  "description": "Run mocha tests tailored for assignments. Based on Markbot by Thomas J Bradley.",
  "author": "Jevi <hello@jevi.me>",
  "homepage": "https://github.com/jevi-me/lintbot/",
  "bugs": "https://github.com/jevi-me/lintbot/issues",
  "private": true,
  "main": "lintbot.js",
  "dependencies": {
    "axe-core": "^3.1.2",
    "builder-util": "^9.6.2",
    "calipers": "^2.0.1",
    "calipers-jpeg": "^2.0.0",
    "calipers-png": "^2.0.0",
    "calipers-svg": "^2.0.0",
    "cheerio": "^1.0.0-rc.2",
    "css": "^2.2.4",
    "css-select": "^2.0.0",
    "electron-is": "^3.0.0",
    "electron-navigation": "^1.5.8",
    "entities": "^1.1.1",
    "eslint": "^5.12.0",
    "exif": "^0.6.0",
    "finalhandler": "^1.1.1",
    "fix-path": "^2.1.0",
    "front-matter": "^2.3.0",
    "get-port": "^4.0.0",
    "git-commits": "^1.2.0",
    "git-state": "^4.1.0",
    "glob": "^7.1.3",
    "htmlcs": "^0.4.1",
    "image-size": "^0.6.3",
    "jimp": "^0.5.3",
    "js-beautify": "1.7.5",
    "js-yaml": "^3.12.0",
    "markdownlint": "^0.11.0",
    "merge-objects": "^1.0.5",
    "mime-types": "^2.1.20",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "node-dir": "^0.1.16",
    "parse5": "^5.1.0",
    "parse5-htmlparser2-tree-adapter": "^5.1.0",
    "png-itxt": "^2.0.0",
    "portfinder": "^1.0.17",
    "request": "^2.88.0",
    "string": "^3.3.3",
    "stylelint": "^9.6.0",
    "stylelint-declaration-block-no-ignored-properties": "^1.1.0",
    "webcoach": "^2.2.0",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "^3.0.2",
    "electron-builder": "^20.28.4"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "debug": "NODE_ENV=development electron lintbot.js",
    "start": "electron lintbot.js",
    "pack-files": "xattr -cr .",
    "pack-bg": "tiffutil -cathidpicheck ./build/background.png ./build/background@2x.png -out ./build/background.tiff",
    "pack-mac": "npm run pack-files && build -m --dir",
    "pack-win": "npm run pack-files && build -w --dir",
    "pack": "npm run pack-files && build -mw --dir",
    "build-mac": "npm run pack-bg && npm run pack-files && build -m",
    "build-win": "npm run pack-files && build -w",
    "build": "npm run pack-bg && npm run pack-files && build -lmw",
    "hash-passcode": "node ./scripts/hash-passcode.js",
    "gen-https-cert": "./scripts/gen-https-cert.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jevi-me/lintbot.git"
  },
  "build": {
    "appId": "ca.jevi.lintbot",
    "copyright": "Based on Markbot by Thomas J Bradley",
    "productName": "Lintbot",
    "compression": "maximum",
    "asarUnpack": [
      "vendor"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools",
      "extendInfo": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeRole": "Editor",
            "LSHandlerRank": "Alternate",
            "LSItemContentTypes": [
              "public.directory",
              "com.apple.bundle",
              "com.apple.resolvable"
            ]
          }
        ]
      }
    },
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "perMachine": true
    },
    "dmg": {
      "title": "Install Lintbot",
      "iconSize": 100,
      "window": {
        "x": 200,
        "y": 200
      },
      "contents": [
        {
          "x": 494,
          "y": 270,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 210,
          "y": 270,
          "type": "file"
        }
      ]
    }
  }
}
